<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">
  <xacro:property name="M_PI" value="3.1415926535897931" />

  <xacro:macro name="pioneer_swivel" params="name parent xyz rpy models_dir:=^ ">   
  
  <!-- Swivel -->
  <joint name="${name}_joint" type="continuous">
    <origin xyz="${xyz}" rpy="${rpy}"/>
    <axis xyz="0 0 1"/>
    <anchor xyz="0 0 0"/>
    <limit effort="100" velocity="100" k_velocity="0"/>
    <joint_properties damping="0.1" friction="0.0"/>
    <parent link="${parent}"/>
    <child link="${name}"/>
  </joint>
  <link name="${name}">
    <xacro:swivel_inertial x="0.01" y="0.01"  z="0.01" mass="0.01" />
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="file://${models_dir}/pioneer3dx/body/meshes/swivel.stl"/>
      </geometry>
      <material name="swivel">
        <color rgba="0.5 0.5 0.5 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.001 0.001 0.001"/>
      </geometry>	
    </collision>
  </link>
  <gazebo reference="${name}">
    <material value="Gazebo/Grey"/>
    <mu1>0.0</mu1>
    <mu2>0.0</mu2>
    <mu1>0.1</mu1>
    <mu2>0.1</mu2>
    <kp>1000000.0</kp>
    <kd>100.0</kd>
    <minDepth>0.001</minDepth>
    <maxVel>1.0</maxVel>
  </gazebo>
  
  <!-- Center Wheel -->
  <joint name="${name}_wheel_joint" type="continuous">
    <origin xyz="-0.026 0 -0.016" rpy="0 0 0"/>
    <axis xyz="0 1 0" />
    <anchor xyz="0 0 0"/>
    <parent link="${name}"/>
    <child link="${name}_wheel"/>
  </joint>
  <link name="${name}_wheel">
		<xacro:caster_wheel_inertia radius="${0.0375}" length="0.02" mass="0.1" xyz="0 0 0" rpy="0 0 0"/>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="file://${models_dir}/pioneer3dx/body/meshes/center_wheel.stl"/>
      </geometry>
      <material name="WheelBlack">
        <color rgba="0.117 0.117 0.117 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="${-3.1415927/2.0} 0 0"/>
      <geometry>
        <cylinder radius="0.038" length="0.01"/>
      </geometry>
    </collision>
  </link>
  <gazebo reference="${name}_wheel">
    <material value="Gazebo/Black"/>
    <mu1>0.0</mu1>
    <mu2>0.0</mu2>
    <mu1>0.1</mu1>
    <mu2>0.1</mu2>
    <kp>1000000.0</kp>
    <kd>100.0</kd>
    <minDepth>0.001</minDepth>
    <maxVel>1.0</maxVel>
  </gazebo>
    
  <!-- Center Hubcap -->
  <joint name="${name}_hubcap_joint" type="fixed">
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <parent link="${name}_wheel"/>
    <child link="${name}_hubcap"/>
  </joint>
  <link name="${name}_hubcap">
    <xacro:box_inertial x="0.01" y="0.01"  z="0.01" mass="0.01" />
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="file://${models_dir}/pioneer3dx/body/meshes/center_hubcap.stl"/>
      </geometry>
      <material name="swivel">
        <color rgba="0.5 0.5 0.5 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.001 0.001 0.001"/>
      </geometry>
    </collision>
  </link>   
  <gazebo reference="${name}_hubcap">
    <material value="Gazebo/Grey"/>
  </gazebo>
  
  </xacro:macro>

</robot>
